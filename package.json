{
  "name": "nyaf",
  "version": "0.5.2",
  "description": "\"Not Yet Another Framework\" is, well, just another framework. It is, however, extremely simple to learn.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "lint": "tslint './src/packages/@nyaf/lib/src/**/*.ts' && tslint './src/packages/@nyaf/forms/src/**/*.ts' && tslint './src/packages/@nyaf/store/src/**/*.ts'",
    "nyaf-lib": "webpack --config webpack.config.lib.js --mode \"production\"",
    "build": "rimraf dist && rimraf out-tsc && tsc && cp README.md ./src/packages/@nyaf/lib && npm run nyaf-lib && gulp",
    "start": "export PATH=$PATH:/mnt/c/Windows/System32 && webpack-dev-server --open",
    "publish": "npm run build && cd dist/@nyaf/lib && npm publish --access public && cd ../../.. && cd dist/@nyaf/forms && npm publish --access public && cd ../../.. && cd dist/@nyaf/store && npm publish --access public",
    "demo": "npm run build && showdown makehtml -i README.md -o dist/docu.html && webpack --config webpack.config.js --mode \"production\" && npm run codedoc",
    "codedoc": "npm run codedoc-nyaf-lib && npm run codedoc-nyaf-forms && npm run codedoc-nyaf-store",
    "codedoc-nyaf-lib": "compodoc -p ./src/packages/@nyaf/lib/tsconfig.json --output ./dist/documentation",
    "codedoc-nyaf-forms": "compodoc -p ./src/packages/@nyaf/forms/tsconfig.json --output ./dist/documentation/forms",
    "codedoc-nyaf-store": "compodoc -p ./src/packages/@nyaf/store/tsconfig.json --output ./dist/documentation/store"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joergkrause/nyaf.git"
  },
  "keywords": [
    "vanilla JS",
    "es2015",
    "framework",
    "web app"
  ],
  "author": "Joerg <isageek> Krause",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/joergkrause/nyaf/issues"
  },
  "homepage": "https://github.com/joergkrause/nyaf#readme",
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.11",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.12.26",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^2.1.1",
    "file-loader": "^3.0.1",
    "gulp": "^4.0.2",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.9.0",
    "mini-css-extract-plugin": "^0.6.0",
    "node-sass": "^4.13.1",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^7.3.1",
    "showdown": "^1.9.1",
    "style-loader": "^0.23.1",
    "ts-loader": "^5.4.5",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.5",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1"
  },
  "dependencies": {
    "bootstrap": "^4.4.1",
    "metro4": "^4.3.5"
  }
}
