{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "lib": [
      "es2018",
      "es5",
      "dom"
    ],
    "jsx": "react",
    "declaration": true,
    "reactNamespace": "JSX",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": false,
    "baseUrl": "src",
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "paths": {
      "@nyaf/lib/*": ["packages/@nyaf/lib/src/*"],
      "@nyaf/forms/*": ["packages/@nyaf/forms/src/*"],
      "@nyaf/store/*": ["packages/@nyaf/store/src/*"]
    }
  }
}
